<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Panel</title>
        <link rel="stylesheet" href="/styles/global.css" />
    </head>
    <body>
        <div class="card">
            <h1>Showing all users</h1>
            <table border="1">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Phone</th>
                        <th>Gender</th>
                        <th class="error">DELETE</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user) => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.fullname %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.gender %></td>
                        <td>
                            <a href="/delete/<%= user.id %>">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
